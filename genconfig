import os
def getfile_count(path):
    filecount_name={}
    for root, dirs, files in os.walk(path):
        for filename in files:
            file = open("conf.txt","a")
            count = len(open(root+"/"+filename,'rU').readlines())
            context=root+":"+filename+":"+str(count)+"\n"
            file.write(context)
        file.close()


getfile_count("/home/web/cms")
